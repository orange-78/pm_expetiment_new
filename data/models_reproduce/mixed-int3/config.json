{
  "data": {
    "model_target_dir": "data/models_reproduce",
    "dataset_path": "data/eopc04_14_IAU2000.62-now.csv",
    "train_ratio": 0.70,
    "val_ratio": 0.15,
    "val_mix": false,
    "residual_type": "both",
    "use_scaler": true,
    "scaler_type": "minmax",
    "scaler_after_residual": true,
    "scaler_params": {
      "feature_range": "(-1, 1)"
    }
  },
  "model": {
    "num_features": 2,
    "lstm0": 64,
    "lstm1": 64,
    "lstm2": 32,
    "attnhead": 2,
    "attndim": 64,
    "dropout0": 0.3,
    "dropout1": 0.3,
    "dropout2": 0.2
  },
  "training": {
    "model_target_dir": "data/models_reproduce/mixed-int3",
    "learning_rate": 4e-4,
    "batch_size": 256,
    "epochs": 50,
    "shuffle": true,
    "early_stop": 5,
    "monitor": "val_integrated_mae",  // 'val_loss','val_mean_absolute_error','val_mean_squared_error','val_root_mean_squared_error', 'val_integrated_mae', 'val_integrated_mse'
    "loss": "mixed-int",  // 'mae','mse','mae_freq','mse-corr','mae-corr','huber-corr','focal-mse','quantile','fft','phase', 'int', 'mixed-int'
    "metrics": "loss",
    "alpha": 2e-3,
    "base_loss": "mse",
    "int_base": "mae"
  }
}
